<div class='container edit_element_page'>
  <div class='row'>
    
    
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-default sign-out-btn' %>

    <br>

    <h1 id="admin"> Admin </h1>

    <h2 id="projects"> Projects </h2>
 
      <div class="col-md-4 col-md-offset-4">
        <%= link_to "New Project", new_project_path, class: 'btn btn-primary projects' %>
        <hr>
      <ul>
        <% @projects.each do |project| %>
          <li><%= link_to "#{project.name}", edit_project_path(project) %></li>
          <li><%= link_to edit_project_path(project) do %>
            <img src="<%=project.feature_img.url%>" class="img-responsive"></li>
            <li><%= link_to "Delete", project_path(project), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %></li>
          <% end %>
        <% end %>
      </ul>
    </div>


  </div>
</dvi>