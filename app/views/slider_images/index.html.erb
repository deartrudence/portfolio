 <div class="admin-container">
  <div class="wrapper">
    <h1 class="u-spacer30">Listing Slider Photos</h1>

      <!-- SLIDER PANEL
    =============================== -->    
       <div class="admin-panel u-spacer30">
          <div class="grid">
            <div class="grid__item one-half">
              <h2>Project Listing</h2>
            </div>


               <div class="grid__item one-half">
                <div class="u-alignRight">
                  <%= link_to 'New Slider image', new_slider_image_path, class: 'button' %>
                  <%= link_to 'back', admin_path, class: 'button' %>
                </div>
              </div>
            </div>
        </div>

          <!-- SLIDER PHOTO LISTING
    =============================== -->
                    <table>
                      <thead>
                        <tr>
                          <th>Order</th>
                          <th>Name</th>
                          <th>Photo</th>
                          <th colspan="3">Actions</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @slider_images.each do |slider_image| %>
                          <tr>
                            <td> <%= form_for(slider_image) do |f| %>
                              <% if slider_image.errors.any? %>
                                <div id="error_explanation">
                                  <h2><%= pluralize(slider_image.errors.count, "error") %> prohibited this slider image from being saved:</h2>

                                  <ul>
                                  <% slider_image.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                </div>
                              <% end %>

                              <div class="form-group u-spacer10">
                                <%= f.text_field :slider_order, class: 'input' %>
                              </div>
                              <div class="actions">
                                <%= f.submit 'Update Order', class: 'button' %>
                              </div>
                              <% end %>
                            </td>
                            <td><%= slider_image.name %></td>
                            <td><img src="<%= slider_image.photo.url%>" class="listing-image"></td>
                            <td><%= link_to 'Edit', edit_slider_image_path(slider_image), class: 'button button--secondary' %></td>
                            <td><%= link_to 'Destroy', slider_image, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button--secondary' %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

