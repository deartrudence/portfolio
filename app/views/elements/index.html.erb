<div class="admin-container">
  <div class="wrapper"> 
    <h1 class="u-spacer30">Admin Panel</h1>
    <h2>Listing elements</h2>

  <!-- ADMIN PANEL
    =============================== -->
    <div class="admin-panel u-spacer30">
      <div class="grid">
        <div class="grid__item one-half">
          <h2>Project Listing</h2>
        </div>
        <div class="grid__item one-half">
          <div class="u-alignRight">
            <%= link_to 'New Element', new_element_path, class: "button" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'button' %>
          </div>
        </div>
      </div>
    </div>

    <table id="sortable" class="table" data-update_url="<%= sort_elements_path%>">
      <thead>
        <tr>
          <th>Name</th>
          <th>order</th>
          <th>Html tag</th>
          <th>Html subtag</th>
          <th>ID</th>
          <th>Project</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @elements.each do |element| %>
          <tr class="item" data-item_id="<%= element.id %>">
            <td><%= element.name %></td>
            <td><%= element.order %></td>
            <td><%= element.html_tag %></td>
            <td><%= element.html_subtag %></td>
            <td><%= element.id %></td>
            <td><%= element.project_id %></td>
            <td><%= link_to 'Show', element, class: 'button' %></td>
            <td><%= link_to 'Edit', edit_element_path(element), class: 'button' %></td>
            <td><%= link_to 'Destroy', element, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    

  </div>
</div>






