
<div class='container edit_element_page'>
  <div class='row'>
    <h1>Editing project <%=@project.name%></h1>

    <%= render 'form' %>

    <%= link_to 'Preview', @project, class: 'btn btn-default' %>
    <%= link_to 'Back', admin_path, class: 'btn btn-default' %>

    <hr>
    <h2> Elements </h2>
    <hr>
    <%= link_to 'Add New Element', new_element_path(:project => @project), class: 'btn btn-default' %>

    <br/>
    <br/>


    <ul>
      <% for @element in @project.elements %>
      
          <li><%= link_to "#{@element.name}", edit_element_path(@element, :project => @project) %></li>
          <li><%= link_to edit_element_path(@element, :project => @project) do %>
            <img src="<%= @element.url %>" alt="" class="img-responsive"></li>
          <li><%= link_to "Delete", element_path(@element, :project => @project), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %></li>
            <hr>
            <% end %>
      <% end %>
    </ul>


    
  </div>
</div>
