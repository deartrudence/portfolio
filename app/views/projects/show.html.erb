
<div class="container show_page">
  <div class='row'>
    <div class="col-md-12">

    <h1><%= @project.name %></h1>

    <div class="col-md-6" "col-sm-12">
      <p class='description' >
        <%= @project.description %>
      </p>
    </div>

    <div class='feature_image img-responsive col-md-4'> 
      <img src='<%= @project.feature_image %>'>
    </div>
  </div>


  <div class="row">

    <ul>
      <% for @element in @project.elements %>
      <div class="col-xs-12">
        <li>
            <img src="<%= @element.url %>" alt="<%=@element.name %>" class="img-responsive img">
        </li>
      </div>
      <% end %>
    </ul>
  </div>



  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>

  </div>
</div>
